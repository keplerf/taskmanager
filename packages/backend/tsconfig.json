{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022"],
    "types": ["node"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@keplerweb/shared": ["../shared/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "prisma"]
}
